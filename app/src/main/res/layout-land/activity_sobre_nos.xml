<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6F1CE"
    tools:context=".SobreNosActivity">

    <ImageView
        android:id="@+id/imvJessica"
        android:layout_width="147dp"
        android:layout_height="137dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jessica" />

    <TextView
        android:id="@+id/tvJessica"
        android:layout_width="140dp"
        android:layout_height="134dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_textview"
        android:fontFamily="sans-serif"
        android:text="@string/str_sobre_jessica"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imvJessica"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imvAmanda"
        android:layout_width="147dp"
        android:layout_height="137dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvJessica"
        app:srcCompat="@drawable/amanda" />

    <TextView
        android:id="@+id/tvAmanda"
        android:layout_width="145dp"
        android:layout_height="134dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_textview"
        android:text="@string/str_sobre_amanda"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imvAmanda"
        app:layout_constraintTop_toBottomOf="@+id/imvJessica" />

    <ImageView
        android:id="@+id/imvSophia"
        android:layout_width="147dp"
        android:layout_height="137dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/sophia"
        app:layout_constraintEnd_toStartOf="@+id/tvSophia"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sophia" />

    <TextView
        android:id="@+id/tvSophia"
        android:layout_width="145dp"
        android:layout_height="134dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_textview"
        android:text="@string/str_sobre_sophia"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="147dp"
        android:layout_height="137dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvNauvia"
        app:layout_constraintTop_toBottomOf="@+id/imvSophia"
        app:srcCompat="@drawable/nauvia" />

    <TextView
        android:id="@+id/tvNauvia"
        android:layout_width="145dp"
        android:layout_height="134dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_textview"
        android:text="@string/str_sobre_nauvia"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvSophia" />

</androidx.constraintlayout.widget.ConstraintLayout>